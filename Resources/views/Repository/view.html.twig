{% extends "FOMManagerBundle::manager.html.twig" %}
{% from "MapbenderWmtsBundle:Repository:macros.html.twig" import requestinformation  %}

{% block title %}{{ 'mb.wmts.wmtsloader.repo.view.title.wmts' | trans }} {{ wmts.title }}{% endblock %}

{% block css %}
  {{parent()}}
  {#% stylesheets filter="compass,cssrewrite"
    "bundles/mapbendermanager/sass/manager/services.scss"
  %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %#}
{% endblock %}

{% block manager_js %}
    <script type="text/javascript" src="{{ asset('bundles/mapbenderwmts/repository/repository.js') }}"></script>
